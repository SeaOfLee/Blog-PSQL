<section id="intro" data-speed="6" data-type="background">
    <div class="container">
      <div class="row-fluid">
            <div class="span4 text-center">
              <%= image_tag('blog_header.png') %>
            </div>
            <div class="span8 text-center">
              <!-- <img src="images/title.png"> -->
            </div>
        </div>
        <div class="hero-unit text-center">
          
        </div>
      </div>
  </section>

<section id="home" data-speed="4" data-type="background">
    <div class="container">
      <div class="row-fluid">

            </div>
        </div>
      </div>
  </section>

<section id="content" data-speed="2" data-type="background">
  <div class="container">
    <% @posts.each do |p| %>
      <div class="row">
        <div class="col-md-8 blog_content col-md-offset-1">
          <strong><h3 class='title'><%= p.title %></h3>
          <br></strong> 
          <p><%= truncate(p.post_text, :length => 800, separator: ' ') -%></p>
            <%= link_to 'View', p %> 
            | <%= link_to 'Comments', p %> (<%= p.comments.count %>)
          <% if current_user != nil && current_user.is_admin == true %>
            |<%= link_to ' Edit', edit_post_path(p) %> 
            |
            <%= link_to ' Delete', post_path(p), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</section>