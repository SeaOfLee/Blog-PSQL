<div class="row">
  <div class="col-md-8 blog_content">
    <strong><h3><%= @post.title %></h3>
    <br></strong> 
    <p><%= @post.post_text %></p>
    <p><%= image_tag @post.photo.url %></p>
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
</div>

<%= render @post.comments %>
<%= render 'comments/form' %>



